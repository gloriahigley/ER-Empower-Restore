<p id="notice"><%= notice %></p>

<h1>Listing Possible Answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Order</th>
      <th>Answer text</th>
      <th>Is text</th>
      <th>Boolean</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @possible_answers.each do |possible_answer| %>
      <tr>
        <td><%= possible_answer.question_id %></td>
        <td><%= possible_answer.order %></td>
        <td><%= possible_answer.answer_text %></td>
        <td><%= possible_answer.is_text %></td>
        <td><%= possible_answer.boolean %></td>
        <td><%= link_to 'Show', possible_answer %></td>
        <td><%= link_to 'Edit', edit_possible_answer_path(possible_answer) %></td>
        <td><%= link_to 'Destroy', possible_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Possible answer', new_possible_answer_path %>
